
<table width=90% border=0 cellpadding=0 cellspacing=0>
	<% form_for([@team, @skill]) do | f | %>
	  	<%= render 'shared/error_messages', :object => f.object %>
	
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td width=30%>&nbsp;</td><td width=60%>&nbsp;</td>
			</tr>
		
			<tr>
				<td colspan=2 class='curved'>Skill Details - fields marked with an asterisk are mandatory</td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :name, "Name: *" %></td>
				<td class="Field"><%= f.text_field :name, :size => "60" %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :complexity, "Complexity of skill: *" %></td>
				<td class="Field"><%= f.select :complexity, options_for_select([""] + Skill::VALID_COMPLEXITY, @skill.complexity )%></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :red_threshold, "Red threshold: *" %></td>
				<td class="Field"><%= f.text_field :red_threshold, :size => "4" %> (out of 100)</td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :amber_threshold, "Amber threshold: *" %></td>
				<td class="Field"><%= f.text_field :amber_threshold, :size => "4" %> (out of 100)</td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :number_people_required, "Number of people required: *" %></td>
				<td class="Field"><%= f.text_field :number_people_required, :size => "4" %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :availability, "Available for use?" %></td>
				<td class="Field">
					<%= f.radio_button :availability, :true, options = {:checked => true} %> Yes
					<%= f.radio_button :availability, :false %> No
				</td>
			</tr>
		</table>

		<%= render 'shared/submit', :object => f.object %>

	<% end %>
</table>