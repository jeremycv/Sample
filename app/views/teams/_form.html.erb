<table width=100% border=0 cellpadding=0 cellspacing=0>
	<% form_for(@team) do | f | %>
	  	<%= render 'shared/error_messages', :object => f.object %>
	
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td width=30%>&nbsp;</td><td width=60%>&nbsp;</td>
			</tr>
			
			<tr>
				<td colspan=2 class='curved'>Team details</td>
			</tr>
			
			<tr>
				<td class="Label" valign="top"><%= f.label :name, "Team Name:" %></td>
				<% if controller.action_name != "show" %>
					<td class="Field"><%= f.text_field :name, :size => "60" %></td>
				<% else %>
					<td class="Field"><%= @team.name %></td>
				<% end %>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :business_unit, "Business Unit:" %></td>
				<% if controller.action_name != "show" %>
					<td class="Field"><%= f.text_field :business_unit, :size => "60" %></td>
				<% else %>
					<td class="Field"><%= @team.business_unit %></td>
				<% end %>
			</tr>
		</table>
		
		<%= render 'shared/submit', :object => f.object %>

	<% end %>
</table>