<table width=100% border=0 cellpadding=0 cellspacing=0>
	<tr class="someclass">
		<% status = employee.status %>
		<% colour = employee.colour(status) %>
		
		<td class="Underline" valign=top width='40%'>
			<%= link_to("<font color= #{colour}> #{employee.name}</font>", employee_path(employee)) %>
		</td>
		
		<td class="Underline">
			<Div id="skills_<%= "#{employee.employee_id}" %>_expand" style=display:inline %>
				<font size="1">
					<%= link_to_remote "Show skills...", :url => {:action => 'show_enrollments', "id" => "#{employee.employee_id}" }%>
				</font>
			</Div>
			
			<Div id="skills_<%= "#{employee.employee_id}" %>_collapse" style=display:none %>
				<font size="1">
					<%= link_to_remote "Hide skills...", :url => {:action => 'hide_enrollments', "id" => "#{employee.employee_id}" }%>
				</font>
			</Div>
		</td>
	</tr>
</table>

<Div id="skills_<%= "#{employee.employee_id}" %>" %>

</Div>



