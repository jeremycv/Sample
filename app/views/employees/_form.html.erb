
<table width=90% border=0 cellpadding=0 cellspacing=0>
	<% form_for([@team, @employee]) do | f | %>
	  	<%= render 'shared/error_messages', :object => f.object %>
	
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td width=25%>&nbsp;</td>
				<td width=75%>&nbsp;</td>
			</tr>
		
			<tr>
				<td colspan=2 class='curved'>Employee Details</td>
			</tr>

			<tr>
				<td class="Label" valign="top"><%= f.label :employee_id, "Employee Salary Number:" %></td>
				<td class="Field"><%= f.text_field :employee_id, :size => "20" %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :name, "Name:" %></td>
				<td class="Field"><%= f.text_field :name, :size => "60" %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :comment, "Comment:" %></td>
				<td class="Field"><%= f.text_area :comment, :size => "80x3" %></td>
			</tr>
		</table>
		
		<%= render 'shared/submit', :object => f.object %>

	<% end %>
</table>