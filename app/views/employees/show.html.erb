
<%= render :partial => "shared/outline" %>

<table width=90% border=0 cellpadding=0 cellspacing=0>
	<% form_for(@employee) do | f | %>
	
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td width=25%>&nbsp;</td>
				<td width=75%>&nbsp;</td>
			</tr>
		
			<tr>
				<td colspan=2 class='curved'>Employee Details</td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :name, "Name:" %></td>
				<td class="Field"><%= @employee.name %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :employee_id, "Employee Salary No.:" %></td>
				<td class="Field"><%= @employee.employee_id %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :employee_team, "Team:" %></td>
				<td class="Field"><%= link_to @employee.team.name, team_path(@team) %></td>
			</tr>
			<tr>
				<td class="Label" valign="top"><%= f.label :status, "Status:" %></td>
				<% status = @employee.status %>
				<% colour = @employee.colour(status) %>
				<td class="Field"><b><font color=<%= "#{colour}" %>><%= status %></font></b></td>
			</tr>
		</table>
	<% end %>
</table>
<br>
<%= render :partial => "shared/enrol_title" %>
<%= render :partial => @enrollments %>
<br>
<table width=100% border=0 cellpadding=0 cellspacing=0>
	<tr>
		<%= "#{image_tag('skill.png')}" %> <%= link_to " Add another skill", new_employee_enrollment_path(@employee) %>						
	</tr>
</table>