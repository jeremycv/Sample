<table width=100% border=0 cellpadding=0 cellspacing=0>
	<% form_for(@team) do | f | %>
		<table width=100% border=0 cellpadding=0 cellspacing=0>
			<tr>
				<td width=25%>&nbsp;</td>
				<td width=75%S>&nbsp;</td>
			</tr>
			
			<tr>
				<td colspan=2 class='curved'>Team Details</td>
			</tr>
			
			<tr>
				<td class="Label" valign="top">Team Name:</td>
				<td class="Field"><b><%= link_to @team.name, team_path(@team) %></b></td>
			</tr>
			<tr>
				<td class="Label" valign="top">Business Unit:</td>
				<td class="Field"><%= @team.business_unit %></td>
			</tr>
			<tr>
				<td class="Label" valign="top">Overall status:</td>
				<% status = @team.status %>
				<% colour = @team.colour(status) %>
				<td class="Field">
					<b><font color=<%= "#{colour}" %>><%= status %></font></b>
				</td>
			</tr>
		</table>
	<% end %>
</table>